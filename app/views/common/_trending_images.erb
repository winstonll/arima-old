<script type="text/javascript">
$(document).ready(function() {
      $("<%= "." + question.id.to_s%>").css("background-image", "url('/system/uploads/" + "<%= question.image_link %>" + "')");
      $("<%= "." + question.id.to_s%>").css("background-repeat", "no-repeat");
      $("<%= "." + question.id.to_s%>").css("background-position", "center center");
      $("<%= "." + question.id.to_s%>").css("background-size", "200px");
});
</script>

<div class="<%= question.id.to_s%> imgulike" style= "width: 10em; height: 10em; display: inline-block;">
    <a href="<%= question_path(question) %>" title="<%= question.label %>">
      <div style="height: 125px;"></div> 
    </a>
</div>
