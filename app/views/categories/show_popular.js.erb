$(document).ready(function() {
  <% if !cookies[:guest].nil? && @unanswered.any? %>
    $("#questions-container").html('<%= escape_javascript(render partial: "categories/show_unanswered_questions") %>');
  <% else %>
    $("#questions-container").html('<%= escape_javascript(render partial: "categories/show_popular_questions") %>');
  <% end %>

  <% if !cookies[:guest].nil? && !@answered.empty? %>
    $("#questions-container").append('<%= escape_javascript(render partial: "categories/show_answered_questions") %>');
  <% end %>
});
