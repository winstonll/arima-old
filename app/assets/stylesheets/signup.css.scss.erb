/* Login Page*/

.login-container {
  min-height: 100%;
  width: 100%;

  background-image: url("<%= image_path("backgrounds/taipei_bg.jpg") %>");
  background-position: center;
  background-repeat: no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

  color: #fff;
  text-align: center;

  .signin-container {
    padding-top: 9em;
    height: 100%;
    width: 100%;
    margin: 0 auto;

    .signin-title {
      margin: 0;
      margin-bottom: 0.25em;
      font-weight: 700;
      font-size: 45px;
      text-shadow: 0px 2px 4px rgba(0,0,0,0.4);
    }

    .signin-form {

      .email-input,
      .password-input {
        position: relative;

        .signin-inputs {
          text-align: left;
          margin: 0;
          display: inline-block;
          min-width: 19em;
          padding-bottom: 1em;

          label {
            display: block;
            font-weight: 400;
            text-shadow: 0px 1px 2px rgba(0,0,0,0.5);
            padding-right: 1em;
          }

          .input-box {
            height: 38px;
            width: 300px;
            margin-bottom: 5px;
            margin: auto;
            font-size: 12px;
            font-weight: normal;
            background-color: #fff;
            border: 0;
            color: grey;
            padding-left: 0.75em;
            border-radius: 3px;
          }
        }
      }

      .signin-button {
        margin: auto;
        margin-bottom: 1em;
      }
    }
  }
}

/* Signup Page*/

.signup-container {
  min-height: 100%;
  width: 100%;

  background-image: url("<%= image_path("backgrounds/tokyo_bg.jpg") %>");
  background-position: center;
  background-repeat: no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

  color: #fff;
  text-align: center;

  .logo-name-container {
    position: relative;
    top: 5em;
      #welcome {
        font-weight: 600;
        text-shadow: 0px 2px 4px rgba(0,0,0,0.4);
      }

      #logo {
        height: 150px;
        width: auto;
      }
    }

  .signup-intro {
    position: relative;
    top: 5em;
    font-weight: 400;
    font-size: 17px;
    text-shadow: 0px 2px 4px rgba(0,0,0,0.4);
  }

  .signup-form {
    position: relative;
    top: 7em;

    .signup-section {
      position: relative;
      top: 1em;

      .signup-input {
        display: inline-block;
        text-align: left;
        max-width: 100em;

        .input-username,
        .input-email,
        .input-password {
          display: inline-block;
          width: 280px;
          height: 38px;
          font-style: italic;
          margin-bottom: 31px;
          position: relative;

          #email-input,
          #password-input {
            display: inline;
            position: relative;
          }

          .lock {
            display: inline;
            padding-left: 5px;
            padding-botton: 5px;
            width: 5%;
          }

        .input-box {
          height: 38px;
          width: 270px;
          margin-bottom: 5px;
          margin: auto;
          font-size: 12px;
          font-weight: normal;
          background-color: #fff;
          border: 0;
          color: grey;
          padding-left: 0.75em;
          border-radius: 3px;
        }

        label {
          font-weight: 400;
          text-shadow: 0px 1px 2px rgba(0,0,0,0.5);
          padding-right: 1em;
        }
        }
      }

      .signup-links-bottom {
        text-align: left;
        text-shadow: 0px 1px 2px rgba(0,0,0,0.5);
        position: relative;
        top: 5em;

        #signup-start {
          text-align:center;

          .signup-button {
            background-color: #50E3C2;
            color: #fff;
            border-radius: 4px;
            width: 6em;
            height: 2em;
            font-weight: 600px;
            border: 0;

            &:hover {
              opacity: 0.8;
            }
          }
        }

        .login-here-home,
        .terms-notice {
          font-size: 12px;
          margin: 4px;
          text-align: center;
         
          a {
            text-decoration: underline;
            color: #fff;
          }
        }
      }
    }
  } 
}
