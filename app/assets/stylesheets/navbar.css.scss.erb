#home-navbar {
  height: 50px;
  width: 100%;
  line-height: 60px;
  background-color: #1F2532;
  font-weight: 600;
  padding-left: 35px;
  padding-right: 35px;

  position: fixed;
  top: 0px;
  z-index: 3000;


  .nav-btn {
    font-size: 12px;
    color: #fff;
    border-radius: 4px;
    transition: all 150ms linear;
    -webkit-transition: all 150ms linear;
    -ms-transition: all 150ms linear;
    -moz-transition: all 150ms linear;
     margin-right: 12px;
     margin-left: 4px;
  }

  .nav-btn:hover {
    box-shadow: 0px 2px 2px rgba(100,100,100,0.5);
  }

  #nav-signup-btn {
    padding: 7px 16px 7px 16px;
    background-color: #50e3c2;
    color: #fff
  }

  #nav-login-btn {
    padding: 7px 18px 7px 18px;
    margin-left: -10px;

    &:hover{
      background-color: #007CFD;
    }

  }

  #nav-logout-btn {
    padding: 9px 21px 9px 21px;
    background-color: #1F2532;

    &:hover{
      background-color: #007CFD;
    }
  }

  .left {
    position: relative;
    float: left;
  }

  #st{
      display: block;
      position: relative;
      top: 8px;
      right: 10px;
      width: 375px;
      height: 30px;
      padding:6px 15px 6px 30px;
      margin:3px;
      background: url(image_path('search.png')) no-repeat 8px 6px;
      background-color: #e1e1e1;
      border: 1px solid #D4D4D4;
      color: #6f6f6f;
      font-weight: 400;
  }

  #st::-webkit-input-placeholder { /* WebKit browsers */
    color:    #aaa;
  }

  #st:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
     color:    #aaa;
     opacity:  1;
  }

  #st::-moz-placeholder { /* Mozilla Firefox 19+ */
     color:    #aaa;
     opacity:  1;
  }

  #st:-ms-input-placeholder { /* Internet Explorer 10+ */
     color:    #aaa;
  }

  .right {
    position: relative;
    float: right;
    bottom: 5px;
    right: 5%;

    #arima-icon {
      padding-right: 1em;
      img{
        width: 42px;
      }
      &:hover{
        opacity: .9;
      }
    }

    #anonav-btn {
      margin-right: 10px;
      margin-left: 2em;
    }

    #imageupload {
      margin-right: 1em;
      margin-left: 1em;
      background-color: #FF7A40;
      padding: 9px 15px 9px 15px;
      color: white;
      border-radius: 5px;
      font-size: 13px;
      font-weight: bold;

      &:hover{
        background-color: #FF631F;
      }

      img {
        margin-right: 6px;
        margin-bottom: 3px;
      }
    }
  }

}

#imageuploadmobile {
  background-color: #FF7A40;

  width: 30px;
  color: white;
  border-radius: 5px;
  font-size: 12px;

  &:hover{
    background-color: #FF631F;
  }

  img {
    margin-right: 6px;
    margin-bottom: 3px;
  }
}

@media screen and (max-width: 1200px) {
  #home-navbar {
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
  .left {
    left: 10px;
    #st {
      width: 132px !important;
    }
  }
  .right {
    #anonav-btn {
      display: none;
    }
    #arima-icon {
      padding: 0 !important;
    }
  }
}
