#shareSignupModal {
  background: #419bf9 repeat-x center top;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100%;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  width: 25em;
  height: 25em;
  margin: auto;
  overflow: auto;
  border-radius: 10px;

  .go-back-link {
    position: relative;
    float: right;
    right: 10px;
    color: white;
    font-weight: bold;
    font-size: 27px;
  }

  .share-modal-content-container {
    text-align: center;
    padding-top: 2em;
    padding-left: 2em;
    padding-right: 2em;
    font-weight: bold;

    .signup-form {
      text-align: left;

        .signup-input {

          .input-username,
          .input-password {
            display: inline-block;
            margin: 1em 0 0 0 ;

            .input-box {
              height: 30px;
              width: 290px;
              margin: auto;
              font-size: 12px;
              font-weight: normal;
              font-style: italic;
              background-color: #fff;
              border: 0;
              border-radius: 3px;
              color: grey;
              padding-left: 0.75em;
            }
          }

          #password::-webkit-input-placeholder {
            background-image: url(image_path('lock.png'));
            background-repeat: no-repeat;
            background-size: 12px 15px;
            background-position: 25% 25%;
          }

          #password::-moz-placeholder {
            background-image: url(image_path('lock.png'));
            background-repeat: no-repeat;
            background-size: 12px 15px;
            background-position: 25% 25%;
          }
        }

        .signup-links-bottom {
          text-align: center;

          .signup-button {
            padding: 10px 10px 10px 10px;
            text-shadow: 0px 1px 2px rgba(0,0,0,0.5);
            background-color: #50e3c2;
            color: #fff;
            border-radius: 3px;
            border: 0;
            margin: 1em auto;
            cursor: pointer;

            &:hover {
              opacity: 0.8;
            }
          }

          .terms-notice {
            font-weight: normal;
            font-size: 10px;
            a { color: inherit;
            text-decoration: underline; }
          }
        }
    }
  }
}

