/* Share New Question Modal */
#shareNewQuestionModal,
#shareAnswerModal {
  width: 600px;
  padding: 100px 0px 20px 0px;
  margin: 0 auto;
  overflow: hidden;

  .share-question-modal-header {
    border-top-right-radius: 5px;
    border-top-left-radius: 5px;
    background-color: #419BF9 !important;
    text-align: center;
    padding-top: 15px;
    padding-bottom: 10px;

    .share-question-label {
      font-weight: 500;
      font-size: 27px;
    }

    .share-question-subtitle {
      font-weight: 400;
      font-size: 20px;
      margin-bottom: 0;
      margin-top:-1em;
    }
  }

  .share-modal-content-container {
    text-align: center;
    background-color:  #419BF9;
    color: #fff;
    font-weight: 300;
    padding-top: -3em;
    padding-bottom: 2em;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;

    .go-back-link {
      padding: 5px 10px 5px 10px;
      background-color: #fff;
      color:  #419BF9;
      font-weight: 500;
      border-radius: 3px;
      width: 25%;
      margin: auto;
      margin-top: 5em;
      cursor: pointer;

      &:hover {
        opacity: 0.8;
      }
    }

    .never-show-again-link {
      color: #aaa;
      cursor: pointer;
      display: block;
      width: 175px;
      margin: auto;
      margin-top: 0.75em;
    }

    .share-modal-tip {
      margin-top: 1.5em;
      font-weight: 500;
    }

    .share-sections {
      margin-bottom: 2.5em;

      .share-link {
        &:not(:first-child) {
          margin-left: 35px;
        }

        .share-image {
          width: 60px;
          height: auto;
        }

        &:hover {
          opacity: 0.8;
        }
      }
    }
  }
}

#missingInputSignup {
