.group-icon {
  cursor:pointer;
  text-align: center;

  input{
    visibility: hidden;
  }
  img {
    height: 70px;
    width: 70px;
    display: block;
    margin: 0 auto;
    padding: 7px 7px 7px 7px;
    -webkit-filter: brightness(1.2) grayscale(.5) opacity(.9);
    -moz-filter: brightness(1.2) grayscale(.5) opacity(.9);
    filter: brightness(1.2) grayscale(.5) opacity(.9);
  }
  input[type="radio"]:checked + img {
    -webkit-transform: scale(1.3);
    transform: scale(1.3);
    -webkit-filter: none;
    -moz-filter: none;
    filter: none;
  }
  &:hover {
    -webkit-transform: scale(1.2);
    transform: scale(1.2);
    img {
      -webkit-filter: none ;
      -moz-filter: none ;
      filter: none;
    }
  }
}

